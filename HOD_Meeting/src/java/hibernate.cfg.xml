<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hod_meeting?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="model/Meeting.hbm.xml"/>
    <mapping resource="model/Staff.hbm.xml"/>
    <mapping resource="model/MeetingStatus.hbm.xml"/>
    <mapping resource="model/Hod.hbm.xml"/>
    <mapping resource="model/MeetingReply.hbm.xml"/>
    <mapping resource="model/Login.hbm.xml"/>
    <mapping resource="model/Department.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
